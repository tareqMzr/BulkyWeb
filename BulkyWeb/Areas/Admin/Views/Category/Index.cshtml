@model List<Category>
<partial name="_Notification" />
<div class="card shadow border-0 mt4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-white">
                <h1>Category List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row ">
                <div class="col-12 text-end pb-2    ">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Add Category</a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <div class="w-75 btn-group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Category_id" class="btn-primary btn mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Category_id" class="btn  mx-2 btn-danger">
                                        <i class="bi bi-pencil-square"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
