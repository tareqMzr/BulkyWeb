@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6 text-start">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary"><i class="bi bi-plus"></i>Add Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Category_id" class="btn-primary btn mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@obj.Category_id" class="d-inline">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
